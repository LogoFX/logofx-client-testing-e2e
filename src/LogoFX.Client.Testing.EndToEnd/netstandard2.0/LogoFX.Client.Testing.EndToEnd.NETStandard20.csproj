    <RootNamespace>LogoFX.Client.Testing.EndToEnd</RootNamespace>
    <Version>1.2.1</Version>
  </PropertyGroup>

  <PropertyGroup>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\Bin\netstandard2.0\Release</OutputPath>
    <DocumentationFile>..\..\Bin\netstandard2.0\Release\LogoFX.Client.Testing.EndToEnd.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="IApplicationPathInfo.cs" />
    <Compile Remove="StartClientApplicationService.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\src\StartClientApplicationService.cs" Link="StartClientApplicationService.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Attest.Testing.Contracts" Version="1.4.1-rc3" />
